            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_margin="5sp"/>

        <TextView
            android:text="Desligar o + Nome dado para o relê*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_margin="5sp"/>

        <TextView
            android:text="* Utilize apenas nomes simples não compostos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_margin="3sp"/>

        <TextView
            android:text="Informações"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="24sp"
            android:layout_margin="10sp"
            android:textStyle="normal|bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            android:text="GitHub: incasa.github.io"
            android:textSize="16sp" />

        <TextView
            android:text="Rodrigo: rodrigo.uba@gmail.com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_margin="5sp"/>

        <TextView
            android:text="Leonardo: leonardosilva.uba@hotmail.com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_margin="5sp"/>

